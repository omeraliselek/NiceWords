
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
@model NiceWord.UI.Areas.Admin.Models.VM.AddSayingVM

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Article/List">Forms</a></li>
        <li class="active">Add Saying</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Article</h3>
                </div>
                <form action="/Admin/Saying/Add" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="Detail">Detail</label>
                            <input type="text" name="Detail" class="form-control" placeholder="Detail">
                        </div>
                        <div class="form-group">
                            <label for="ImagePath">ImagePath</label>
                            <input type="text" name="ImagePath" class="form-control" placeholder="ImagePath">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CategoryID">Choose Category</label>
                        <select name="CategoryID" class="form-control">
                            @foreach (var item in Model.Categories)
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="AppUserID">Choose Category</label>
                        <select name="AppUserID" class="form-control">
                            @foreach (var item in Model.AppUsers)
                            {
                                <option value="@item.ID">@item.UserName</option>
                            }
                        </select>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

