
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}
@model NiceWord.UI.Areas.Admin.Models.DTO.AppUserDTO

<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/List">Forms</a></li>
        <li class="active">Add User</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update User</h3>
                </div>
                <form action="/Admin/AppUser/Update" method="post" role="form" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="FirstName">First Name</label>
                            <input type="text" name="FirstName" class="form-control" value="@Model.FirstName">
                        </div>
                        <div class="form-group">
                            <label for="LastName">Last Name</label>
                            <input type="text" name="LastName" class="form-control" value="@Model.LastName">
                        </div>
                        <div class="form-group">
                            <label for="UserName">User Name</label>
                            <input type="text" name="UserName" class="form-control" value="@Model.UserName">
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" name="Email" id="exampleInputEmail1" class="form-control" value="@Model.Email">
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" name="Password" id="exampleInputPassword1" class="form-control" value="@Model.Password">
                        </div>
                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select name="Role" value="@Model.Role" class="form-control">
                                @foreach (var item in Enum.GetNames(typeof(NiceWord.Core.Enum.Role)))
                                {
                                <option value="@Model.ID">@Model.Role</option>
                                }
                            </select>
                        </div>
                    </div>
                   <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
</form>
            </div>
        </div>
    </div>
</section>